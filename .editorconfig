# FTracker/.editorconfig
# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 4 space indentation for Python and JSON
[*.py]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

# 2 space indentation for YAML, Markdown, and JavaScript
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

# Tab indentation for Makefiles
[Makefile]
indent_style = tab
